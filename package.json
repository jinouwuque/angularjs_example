{
  "name": "vp2-ui",
  "version": "0.0.9",
  "description": "front end source for ColorPK",
  "scripts": {
    "lint": "eslint ./src ./webpack",
    "dev": "webpack serve --config webpack/dev.js",
    "build": "webpack --config webpack/prod.js",
    "analyze": "webpack --config webpack/analyzer.js",
    "test": "jest --coverage --silent"
  },
  "repository": "git+https://github.com/im6/vp2-ui.git",
  "author": "im6",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/im6/vp2-ui/issues"
  },
  "homepage": "https://github.com/im6/vp2-ui#readme",
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.2.2",
    "compression-webpack-plugin": "^7.0.0",
    "core-js": "^3.8.1",
    "css-loader": "^5.0.1",
    "dragula": "^3.7.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.3",
    "node-sass": "^5.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss": "^8.2.10",
    "postcss-loader": "^4.1.0",
    "prettier": "^2.2.1",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "sweetalert": "^2.1.2",
    "webpack": "^5.10.1",
    "webpack-bundle-analyzer": "^4.2.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "setupFiles": [
      "./src/jest-mock.js"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "no-underscore-dangle": 0
    },
    "plugins": [
      "jest"
    ]
  }
}
